<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<StackPane prefWidth="150" prefHeight="60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expleague.expert.forms.StatusViewController" stylesheets="/css/status.css">
  <children>
    <HBox>
      <padding><Insets top="5" right="60" bottom="5" left="5"/></padding>
      <VBox>
        <Region VBox.vgrow="ALWAYS"/>
        <Label text="Нет заданий"/>
        <Region VBox.vgrow="ALWAYS"/>
      </VBox>
    </HBox>
    <AnchorPane>
      <children>
        <ImageView AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" fitHeight="40.0" fitWidth="40.0" fx:id="avatar" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="/images/avatar.png"/>
          </image>
        </ImageView>
      </children>
    </AnchorPane>
    <AnchorPane>
      <children>
        <ImageView AnchorPane.rightAnchor="8" AnchorPane.topAnchor="36" fitWidth="18" fitHeight="18" styleClass="status-button" onMouseClicked="#showConnectionMenu" fx:id="status" onMouseEntered="#highlightStatus" onMouseExited="#unhighlightStatus">
          <image>
            <Image url="/images/status/disconnect.png"/>
          </image>
        </ImageView>
      </children>
    </AnchorPane>
  </children>
</StackPane>