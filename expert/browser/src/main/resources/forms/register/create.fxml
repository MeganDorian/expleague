    <ToggleGroup fx:id="socialNetworkType"/>
  </fx:define>
  <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
  <children>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Выберите социальную сеть, которая будет&#10;связана с пользователем Лиги"/>
    <Region GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <RadioButton selected="true" GridPane.columnIndex="0" GridPane.rowIndex="2" text="ВКонтакте" toggleGroup="$socialNetworkType"/>
  </children>
</GridPane>